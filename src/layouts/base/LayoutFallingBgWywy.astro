---
import Layout from "@/layouts/Layout.astro";
import FallingBg from "@root/src/components/FallingBg.astro";
interface Props {
    readonly title: string;
    readonly css_color_palette: string;
    readonly iconPath?: string;
    readonly fontPath?: string;
    readonly useAstroDefaultCSS?: boolean;
    readonly imageDimensions?: Readonly<[number, number]>;
}

let { title, css_color_palette, iconPath, fontPath, useAstroDefaultCSS, imageDimensions } =
    Astro.props;
---

<Layout
    title={title}
    css_color_palette={css_color_palette}
    iconPath={iconPath}
    fontPath={fontPath}
    useAstroDefaultCSS={useAstroDefaultCSS}
>
    <!-- Removing FallingBg outside of Layout element MIGHT mess up the emojis (aka encoding) -->
    <FallingBg
        UID={["wywy1", "wywy2"]}
        leftPos={["12.5", "87.5"]}
        endLocations={[
            [7.5, 25],
            [75, 92.5],
        ]}
        itemsToGenerate={[
            ["angry", 1],
            ["anxious", 1],
            ["concerned", 1],
            ["dead", 1],
            ["happy", 1],
            ["sad", 1],
            ["satisfied", 1],
            ["standard", 1],
        ]}
        duration={5000}
        path={"/falling_screens/wywy_" + css_color_palette + "/"}
        imageFileExtension=".png"
        imageDimensions={imageDimensions}
    />
    <slot slot="top-bar-button2" name="top-bar-button2" />
    <slot slot="top-bar-button3" name="top-bar-button3" />
    <slot />
</Layout>
