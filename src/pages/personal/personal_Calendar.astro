---
import Layout from "@/layouts/Layout.astro";
import { Calendar } from "@/components/ui/calendar";
// import globalcss from "@public/stylesheets/index.css";
import "@/styles/globals.css";

import {
  Table,
  TableBody,
  // TableCaption,
  // TableCell,
  // TableFooter,
  TableHead,
  TableHeader,
  TableRow,
} from "@/components/ui/table";
---

<Layout title="Eric's Calendar" css_color_palette="light_mode">
  <main>
    <ul role="list" class="link-card-grid">
      <Calendar client:load className="rounded-md border" />

      <Table>
        <TableHeader>
          <TableRow>
            <TableHead>Time</TableHead>
            <TableHead>Name</TableHead>
            <TableHead>Image</TableHead>
          </TableRow>
        </TableHeader>
        <TableBody id="tablebody">

        </TableBody>
      </Table>
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    /* padding: 1rem; */
    /* width: 800px; */
    /* max-width: calc(100% - 2rem); */
    font-size: 20px;
    /* line-height: 1.6; */
  }
  .link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
