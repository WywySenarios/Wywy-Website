---
import Layout from '@/layouts/Layout.astro';
import FallingBg from '@/components/FallingBg.astro';
import Card from '@/components/Card.astro';
---

<Layout title="EZ & Wywy's Website" css_color_palette="dark_mode">
	<main>
		<!-- Removing FallingBg outside of Layout element MIGHT mess up the emojis (aka encoding) -->
		<FallingBg UID={["wywy1", "wywy2"]} leftPos={["12.5", "87.5"]} endLocations={[[0, 25], [75, 100]]}/>
		<ul role="list" class="link-card-grid">
			<Card
				href="awards"
				title="⭐ Awards & Accomplishments!"
				body="These are my awards, recognitions, and accomplishments!"
			/>
			<Card
				href="projects"
				title="🚀 Projects"
				body="These are my very very cool projects!!!"
			/>
			<!-- and resumes are to be graphed over time :P -->
			<Card
				href="resumes"
				title="📝 Resumes"
				body="Read my resume, and how it evolved over time."
			/>
			<Card
				href="Senarios"
				title="🎨 Senarios"
				body="Wywy's home ❤️"
			/>
			<Card
				href="personal"
				title="📝 Personal Blog & Journal"
				body="Here's my personal documentation, starting from 2022!"
			/>
			<Card
				href="blog"
				title="📝 Blog"
				body="Check out my Blog! There's lots of stuff, from video game tactics to math tips & tricks!"
			/>
		</ul>
	</main>
</Layout>