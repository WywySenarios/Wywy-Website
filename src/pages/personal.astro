---
import Layout from '@/layouts/Layout.astro';
import Card from '@/components/Card.astro';
---

<Layout title="EZ & Wywy's Website" css_color_palette="light_mode">
	<main>
        <ul role="list" class="link-card-grid">
			<Card
				href="/personal/schedule"
				title="ðŸ“† Schedule"
				body="If you're ever curious when I'm (usually) free, this is the place to start!"
			/>
			<Card
				href="/personal/personal_Calendar"
				title="ðŸ“† Calendar"
				body="This calendar contains some of the big events that are about to happen!"
			/>
			<Card
				href="/personal/Data"
				title="ðŸ“ˆ Data"
				body="Read my personal data! Some data is censored for privacy reasons, but you'll get to see a lot of cool stuff!"
