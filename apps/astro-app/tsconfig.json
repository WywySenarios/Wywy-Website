{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@universal_root/*": ["./../../*"], // root for all the WywyWebsite apps.
      "@root/*": ["./*"], // root for this Astro app
      "@/*": ["./src/*"], // src for this Astro app
      "@utils/*": ["./src/utils/*"], // utilities
      "@pages/*": ["./pages/*"],
      "@public/*": ["./public/*"],
      "@data/*": ["./data/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*", ".astro/types.d.ts"],
  "exclude": ["dist"]
}
