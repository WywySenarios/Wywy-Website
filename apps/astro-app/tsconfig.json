{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@universal_root/*": ["./../../*"], // root for all the WywyWebsite apps.
        "@root/*": ["./*"], // root for this Astro app
        "@/*": ["./src/*"], // src for this Astro app
        "@pages/*": ["./pages/*"],
        "@public/*": ["./public/*"],
        "@data/*": ["./data/*"]
      },
      "jsx": "react-jsx",
      "jsxImportSource": "react",
      "verbatimModuleSyntax": true,
    },
    "include": ["src", "src/**/*.ts", ".astro/types.d.ts", "**/*", "../../config.yml"],
    "exclude": ["dist"],
  }